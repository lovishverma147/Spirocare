<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="----- Personal Information -----"
        android:gravity="center"
        android:background="#D1D1D1"
        android:padding="@dimen/_7sdp"
        android:textSize="@dimen/_19sdp"
        android:textStyle="bold"
        android:textColor="#324D9E"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#D1D1D1"
        android:layout_gravity="center"
        android:padding="@dimen/_20sdp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Patient Id"
            android:background="#fff"
            android:layout_marginBottom="@dimen/_14sdp"
            android:padding="@dimen/_5sdp"/>

        <EditText
            android:layout_marginBottom="@dimen/_14sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Patient Name"
            android:background="#fff"
            android:padding="@dimen/_5sdp"/>

        <EditText
            android:layout_marginBottom="@dimen/_14sdp"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:background="#fff"
            android:padding="@dimen/_5sdp"/>

        <EditText
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:hint="Weight"
            android:background="#fff"
            android:padding="@dimen/_5sdp"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D1D1D1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="#324D9E"
                android:padding="@dimen/_7sdp"
                android:textSize="@dimen/_12ssp"
                android:layout_marginLeft="@dimen/_20sdp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="#324D9E"
                android:textSize="@dimen/_12ssp"
                android:layout_marginLeft="@dimen/_36sdp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textColor="#324D9E"
                android:textSize="@dimen/_12ssp"
                android:layout_marginLeft="@dimen/_35sdp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D1D1D1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height"
                android:textColor="#324D9E"
                android:padding="@dimen/_7sdp"
                android:textSize="@dimen/_12ssp"
                android:layout_marginLeft="@dimen/_20sdp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cms"
                android:textColor="#324D9E"
                android:textSize="@dimen/_12ssp"
                android:layout_marginLeft="@dimen/_25sdp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feet"
                android:textColor="#324D9E"
                android:textSize="@dimen/_12ssp"
                android:layout_marginLeft="@dimen/_25sdp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inches"
                android:textColor="#324D9E"
                android:textSize="@dimen/_12ssp"
                android:layout_marginLeft="@dimen/_25sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d1d1d1"
            android:padding="@dimen/_20sdp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:hint="Height"
                android:padding="@dimen/_5sdp"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="----- Other Information -----"
            android:gravity="center"
            android:background="#D1D1D1"
            android:padding="@dimen/_7sdp"
            android:textSize="@dimen/_19sdp"
            android:textStyle="bold"
            android:textColor="#324D9E"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#D1D1D1"
        android:layout_gravity="center"
        android:padding="@dimen/_20sdp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date"
            android:background="#fff"
            android:padding="@dimen/_5sdp"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d1d1d1"
            android:orientation="horizontal">

            <EditText
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:hint="Room Temp."
                android:padding="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*Celcius"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textSize="@dimen/_12ssp"
                android:padding="@dimen/_5sdp"
                android:textColor="#324D9E"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_20sdp"
            android:background="#d1d1d1">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:background="#fff"
                android:hint="Doctor Name"
                android:layout_marginBottom="@dimen/_14sdp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:background="#fff"
                android:hint="Referred By"
                android:layout_marginBottom="@dimen/_14sdp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:background="#fff"
                android:hint="Position" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="----- Patient's History -----"
                android:gravity="center"
                android:background="#D1D1D1"
                android:padding="@dimen/_7sdp"
                android:textSize="@dimen/_19sdp"
                android:textStyle="bold"
                android:textColor="#324D9E"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#D1D1D1"
            android:layout_gravity="center"
            android:padding="@dimen/_20sdp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:inputType="textLongMessage"
                android:layout_marginBottom="@dimen/_7sdp"
                android:padding="@dimen/_5sdp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="----- Dr's Notes or Impression -----"
                android:gravity="center"
                android:background="#D1D1D1"
                android:padding="@dimen/_7sdp"
                android:textSize="@dimen/_19sdp"
                android:textStyle="bold"
                android:textColor="#324D9E"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#D1D1D1"
            android:layout_gravity="center"
            android:padding="@dimen/_20sdp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:inputType="textLongMessage"
                android:layout_marginBottom="@dimen/_20sdp"
                android:padding="@dimen/_5sdp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textColor="#fff"
                android:background="#324D9E"
                android:textStyle="bold"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>